{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": [
      "node"
    ]
  },
  "include": [
    "packages/**/*.ts",
    "bin/**/*.ts",
  ],
  "exclude": [
    "node_modules", "dist"
  ]
}